{
    "compilerOptions": {
        "jsx": "react",
        "target": "es5",
        "module": "ESNext",
        "declaration": true,
        "outDir": "dist",
        "strict": true,
        "declarationDir": "dist",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true
